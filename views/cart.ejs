<%- include('./partials/head'); %> 

<body>

	<%- include('./partials/header'); %> 

		<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
					<li><a href="/cart">Cart</a></li>
					<li class="active">carrinho</li>
				</ol>
			</div>
			<div class="table-responsive cart_info">
			
				<% if (cart.length === 0) {   %>
					<div class="carrinho-vazio">
					<h3>"Ops!! parece que o carrinho está vazio, volte a página inicial <a href="/home">clicando aqui!</a> </h3>
				</div>
					<% } else { %>
				<table class="table table-condensed">

					<thead>

								<tr class="cart_menu">
									<td class="image">Item</td>
									<td class="description">Descrição</td>
									<td class="price">Preço</td>
									<td class="quantity">Quantidade</td>
									<td class="total">Total</td>

								</tr>	
						
					</thead>
					<tbody>
						<% cart.forEach(produto => { %>
							<tr>
								<td class="cart_product">
									<a href=""><img src="<%= produto.imagem  %>" alt=""></a>
								</td>
								<td class="cart_description">
									<h4><a href=""><%= produto.nome %> </a></h4>
									<!--<p>Web ID: 1089772</p>-->
								</td>
								<div>
								<td class="cart_price">
									<p><%= new Intl.NumberFormat('pt-BR',{style:'currency', currency:'BRL'}).format(produto.preco)%></p>
								</td>

							
							</div>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<select class="cart_quantity_input">
										<% for( let index = 1; index < 11; index++ ) { %>
										
											<option value="<%= index %>"><%= index %> </option>
										<% } %>
									</select>
									
									
								</div>
							</td>
							<td data-livro = '' class="cart_total">
								<p class="cart_total_price"><%= new Intl.NumberFormat('pt-BR',{style:'currency', currency:'BRL'})
								.format(produto.subTotal)%></p>
							</td>
						
						

						<% }) %>
						<script>
							let element = document.getElementsByClassName("cart_quantity_input")
							element = Array.from(element)
							element.forEach(select => {
								
							select.addEventListener('input', function(evento){
								const subtotal = document.querySelector(".cart_total_price")
								
								const valorUnitario = document.querySelector('td.cart_price p').innerText
								
								const valorUnitarioNumerico = Number(valorUnitario.split("R$")[1].replaceAll('.', '').replace(',', '.'));
								const novoValor = +evento.target.value*valorUnitarioNumerico; 
								const valorFormat =  new Intl.NumberFormat('pt-BR',{style:'currency', currency:'BRL'})
							.format(novoValor)
							subtotal.innerText = valorFormat
							})
							});

						</script>
			
					
					</tbody>
						
			
				</table>
			</div>
		</div>
	</section> 

	
	<section id="do_action">
		<div class="container">
			
			<div class="row">
				<div class="col-sm-6">
					
				</div>
				<div class="checkbox">
					<div class="total_area">
						<ul>
							<li>Carrinho<span><%= new Intl.NumberFormat('pt-BR',{style:'currency', currency:'BRL'}).format(total)%></span></li>
							<li>Frete<span>Gratuito</span></li>
							<li>Total <span><%= new Intl.NumberFormat('pt-BR',{style:'currency', currency:'BRL'}).format(total)%></span></li>
						</ul>
						<a class="btn btn-default update" href="">Atualizar</a>
						<a class="btn btn-default check_out" href="">Finalizar</a>
					</div>
				</div>
			</div>
		</div>

		<% } %>
	</section>
